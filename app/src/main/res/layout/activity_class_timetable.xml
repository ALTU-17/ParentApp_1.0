<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbckgrnd"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context="in.aceventura.evolvuschool.ClassTimetable">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/icd_tb_classtimetable"
            layout="@layout/header_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="60dp"
            android:padding="5dp"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/cardshape"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Period"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/cardshape"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Monday"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/cardshape"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Tuesday"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/cardshape"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Wednesday"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/cardshape"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Thursday"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/cardshape"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Friday"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cardshape"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Saturday"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </TableRow>


                </TableLayout>

                <ListView
                    android:id="@+id/timetable_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="visible" />


            </LinearLayout>

        </HorizontalScrollView>

        <include
            android:id="@+id/bb_classtimetable"
            layout="@layout/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>


