<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/mainbckgrnd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context = ".RemarksDetails">
    <include
        android:id="@+id/icd_tb_remarkdetails"
        layout="@layout/header_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" />

    <ScrollView
        android:fillViewport = "true"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:scrollbars = "vertical"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle = "outsideInset">
        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/cardshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/Remarkdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_marginEnd="5dp">


                <TextView
                    android:id="@+id/remdesc"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Description"
                    app:fontFamily="@font/opensans_semibold"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:fontFamily="@font/spensans_regular"
                    android:layout_marginBottom="10dp"
                    android:text="Loading"
                    android:layout_marginStart="5dp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:id="@+id/homeworkDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_marginEnd="5dp">


                <TextView
                    android:id="@+id/tv_image"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Attachment"
                    app:fontFamily="@font/opensans_semibold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_image_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text=":" />

                <ListView
                    android:visibility="gone"
                    android:id="@+id/remarksattachments_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5pt"
                    android:layout_marginLeft="10pt"
                    android:layout_marginRight="5pt"
                    android:layout_marginEnd="5pt" />

                <LinearLayout
                    android:id="@+id/showAttachmentsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5pt"
                    android:layout_marginLeft="10pt"
                    android:layout_marginRight="5pt"
                    android:layout_marginEnd="5pt"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <include
        android:id="@+id/bb_remarkdetails"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>