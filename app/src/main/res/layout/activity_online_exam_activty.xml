<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbckgrnd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/icd_tb_onlinexam"
            layout="@layout/header_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />

        <RelativeLayout
            android:id="@+id/nodata1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"

            android:background="@drawable/cardshape"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/note_teachername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/no_data_available"
                android:textColor="@color/new2"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/opensans_semibold" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_online_exams"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"

            android:layout_marginBottom="60dp" />

        <include
            android:id="@+id/bb_onlinexam"
            layout="@layout/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</FrameLayout>