<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id = "@+id/scrollView3"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@drawable/mainbckgrnd"
    android:fillViewport = "true"
    android:scrollbarStyle = "insideInset"
    android:scrollbars = "vertical">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical">

        <!--Card-->
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "8dp"
            android:layout_marginTop = "8dp"
            android:layout_marginRight = "8dp"
            android:layout_marginBottom = "8dp"
            android:background = "@drawable/cardshape"
            android:elevation = "10dp"
            android:orientation = "vertical">

            <!--Title-->
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "15dp"
                android:layout_marginLeft = "15dp"
                android:layout_marginTop = "10dp"
                android:layout_marginEnd = "5dp"
                android:layout_marginRight = "5dp"
                android:orientation = "horizontal">


                <TextView
                    android:layout_width = "85dp"
                    android:layout_height = "match_parent"
                    android:layout_marginBottom = "10dp"
                    android:text = "Title"
                    android:visibility="gone"
                    android:textStyle = "bold"
                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "10dp"
                    android:text = ":" />

                <TextView
                    android:textColor = "@color/new2"

                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:id = "@+id/news_title"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "5dp"
                    android:layout_marginLeft = "5dp"
                    android:layout_marginBottom = "10dp"
                    android:text = "Loading"
                    app:fontFamily = "@font/spensans_regular" />

            </LinearLayout>

            <!--Date-->
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "15dp"
                android:layout_marginLeft = "15dp"
                android:layout_marginEnd = "5dp"
                android:layout_marginRight = "5dp"
                android:orientation = "horizontal">


                <TextView
                    android:visibility="gone"
                    android:layout_width = "85dp"
                    android:layout_height = "match_parent"
                    android:layout_marginBottom = "10dp"
                    android:text = "Date"
                    android:textStyle = "bold"

                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "10dp"
                    android:text = ":" />

                <TextView
                    android:id = "@+id/news_date"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "5dp"
                    android:layout_marginLeft = "5dp"
                    android:layout_marginBottom = "10dp"
                    android:text = "Loading"
                    app:fontFamily = "@font/spensans_regular" />

            </LinearLayout>

            <!--Description-->
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "15dp"
                android:layout_marginLeft = "15dp"
                android:layout_marginEnd = "5dp"
                android:layout_marginRight = "5dp"
                android:orientation = "horizontal">


                <TextView
                    android:layout_width = "85dp"
                    android:layout_height = "match_parent"
                    android:layout_marginBottom = "10dp"
                    android:text = "Description"
                    android:textStyle = "bold"
                    android:visibility="gone"
                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "10dp"
                    android:text = ":" />

                <TextView
                    android:id = "@+id/news_description"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "5dp"
                    android:layout_marginLeft = "5dp"
                    android:text = "Loading"
                    app:fontFamily = "@font/spensans_regular" />

            </LinearLayout>
            <!--News Url-->
            <LinearLayout
                android:id="@+id/news_urlLayout"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "15dp"
                android:layout_marginEnd = "5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom = "10dp"
                android:orientation = "horizontal">


                <TextView
                    android:layout_width = "85dp"
                    android:layout_height = "match_parent"
                    android:layout_marginBottom = "10dp"
                    android:text = "Url"
                    android:visibility="gone"
                    android:textStyle = "bold"
                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "10dp"
                    android:text = ":" />

                <TextView
                    android:id = "@+id/news_url"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "5dp"
                    android:layout_marginLeft = "5dp"
                    android:text = "Loading"
                    android:textColor="#0000EE"
                    app:fontFamily = "@font/spensans_regular" />

            </LinearLayout>

            <!--ImageView-->
            <LinearLayout
                android:id="@+id/imglayout"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_marginStart = "15dp"
                android:layout_marginLeft = "15dp"
                android:layout_marginEnd = "15dp"
                android:layout_marginRight = "15dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardUpdate"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width = "match_parent"
                        android:layout_height = "300dp"
                        android:id="@+id/news_image"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
