<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbckgrnd"
    android:orientation="vertical"
    tools:context=".StudentACademicResult">

    <include
        android:id="@+id/icd_tb_studentacademicresult"
        layout="@layout/header_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/ll_Download_Proficiency_Certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:elevation="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_piechart" />
    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:id="@+id/llshowchart"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="71dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_card_rect_navigation"
        android:elevation="2dp"
        android:padding="2dp"
        android:visibility="gone"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"

        >
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:elevation="1dp"

            android:background="@drawable/ic_resultbar_chart" />


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/nodata4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"

        android:layout_marginRight="10dp"
        android:background="@drawable/cardshape"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/item"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/teacher"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/note_teachername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/item"
            android:layout_toRightOf="@+id/item"
            android:gravity="center"
            android:text="@string/no_data_available"
            android:textColor="@color/new2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:fontFamily="@font/opensans_semibold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/item"
            android:layout_toRightOf="@+id/item"
            android:background="@color/shimmer"
            android:text="Teacher Name"
            android:textColor="@color/new2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:fontFamily="@font/opensans_semibold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:layout_toStartOf="@+id/note_date"
            android:layout_toLeftOf="@+id/note_date"
            android:text="Date: "
            android:textSize="14sp"
            android:visibility="invisible"
            app:fontFamily="@font/opensans_semibold" />

        <TextView
            android:id="@+id/note_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="7dp"
            android:background="@color/shimmer"
            android:text="dd-MM-yyyy"
            android:textSize="14sp"
            android:visibility="invisible"
            app:fontFamily="@font/spensans_regular" />


        <TextView
            android:id="@+id/note_subject"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/lineview"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:background="@color/shimmer"
            android:ellipsize="end"
            android:maxLength="100"
            android:maxLines="2"
            android:textStyle="bold"
            android:visibility="invisible"
            app:fontFamily="@font/spensans_regular" />

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerExamlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nodata4"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:visibility="visible" />


    <include
        android:id="@+id/bb_studentacademicresult"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>