<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id = "@+id/scrollView3"
    android:layout_width = "match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:layout_height = "match_parent"
    >

    <LinearLayout
        android:background = "@drawable/mainbckgrnd"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical">

        <!--Card-->
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "8dp"
            android:layout_marginTop = "8dp"
            android:layout_marginRight = "8dp"
            android:layout_marginBottom = "8dp"
            android:background = "@drawable/cardshape_parentcomment"
            android:elevation = "10dp"
            android:orientation = "vertical">


            <!--Title-->
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "15dp"
                android:layout_marginLeft = "15dp"
                android:layout_marginTop = "10dp"
                android:layout_marginEnd = "5dp"
                android:layout_marginRight = "5dp"
                android:orientation = "horizontal"
                tools:ignore = "RtlHardcoded">


                <TextView
                    android:visibility="gone"
                    android:layout_width = "85dp"
                    android:layout_height = "match_parent"
                    android:layout_marginBottom = "10dp"
                    android:text = "Title"
                    android:textStyle = "bold"
                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "10dp"
                    android:text = ":" />

                <TextView
                    android:textColor = "@color/new2"
                    android:id = "@+id/update_title"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "5dp"
                    android:layout_marginBottom = "6dp"
                    android:text = "Loading"
                    android:textSize = "17sp"
                    android:textStyle = "bold"
                    app:fontFamily = "@font/spensans_regular" />

            </LinearLayout>

            <!--Description-->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "15dp"
                android:layout_marginLeft = "15dp"
                android:layout_marginEnd = "5dp"
                android:layout_marginRight = "5dp"
                android:orientation = "horizontal">


                <TextView
                    android:visibility="gone"
                    android:layout_width = "85dp"
                    android:layout_height = "match_parent"
                    android:layout_marginBottom = "10dp"
                    android:text = "Description"
                    android:textStyle = "bold"
                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "6dp"
                    android:text = ":" />

                <TextView
                    android:id = "@+id/update_description"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "5dp"
                    android:layout_marginLeft = "5dp"
                    android:layout_marginBottom = "10dp"
                    android:text = "Loading"
                    app:fontFamily = "@font/spensans_regular" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardUpdate"
                app:cardCornerRadius="6dp"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    app:auto_cycle="true"
                    app:corner_radius="20"
                    app:placeholder="@drawable/progress_animation"
                    app:period="3000"
                    app:delay="0"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
