<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/mainbckgrnd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<androidx.cardview.widget.CardView
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:elevation="5dp"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView
    android:fontFamily="@font/opensans_semibold"
    android:id="@+id/txtexamname"
    android:textSize="18sp"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:text="Exam Name"
    android:layout_marginStart="10dp" />

<ImageView
    android:layout_marginRight="10dp"
    android:id="@+id/list_item_genre_arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|end"
    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
    android:layout_marginEnd="10dp" />
</androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/exam_details"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="in.aceventura.evolvuschool.ClassTimetable">


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:text="Subject"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginEnd="1dp" />


                    <TextView
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="Mark Heading"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginEnd="1dp" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:fontFamily="@font/opensans_semibold"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:text="Marks"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="1dp" />

                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>
        <!--<androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="1dp"
            android:id="@+id/rv_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />-->
    </LinearLayout>
</RelativeLayout>
