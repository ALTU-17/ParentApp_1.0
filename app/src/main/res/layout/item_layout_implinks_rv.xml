<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginStart="2dp"
        android:padding="5dp"
        android:id="@+id/stud_name"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/act_subImp"
            android:text="Important Link Title"
            app:fontFamily="@font/opensans_semibold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/new2"
            android:maxLength="100"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/act_Impdetails"
            android:text="Important Link Details"
            android:layout_below="@+id/act_subImp"
            app:fontFamily="@font/opensans_semibold"
            android:textSize="14sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/act_ImpUrl"
            android:text="Important Link Url"
            android:layout_below="@+id/act_Impdetails"
            app:fontFamily="@font/opensans_semibold"
            android:textSize="14sp"
            android:textColor="#0000EE"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
