<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">
<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/shimmer_layout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rem_card"
        android:background="@drawable/cardshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/item"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                app:elevation="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/studying" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Date: "
                        android:textStyle="bold"
                        app:fontFamily="@font/opensans_semibold"
                        />


                    <TextView
                        android:background="@color/shimmer"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:id="@+id/remark_date"
                        android:text="01-07-2017"
                        app:fontFamily="@font/spensans_regular"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/remaerkAck"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:elevation="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Teacher: "
                    app:fontFamily="@font/opensans_semibold"
                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:id="@+id/remark_teachername"
                    android:text="Teacher"
                    android:background="@color/shimmer"
                    app:fontFamily="@font/spensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="2dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Remark Subject: "
                    android:textStyle="bold"
                    app:fontFamily="@font/opensans_semibold"

                    />

                <TextView
                    android:background="@color/shimmer"
                    android:id="@+id/remark_ssubject"
                    android:text="Remark"
                    app:fontFamily="@font/spensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp" />

            </LinearLayout>


            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textStyle="bold"
                         android:text="Description: "
                         />

                     &lt;!&ndash;<TextView
                         android:id="@+id/remark_desc"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         />

                 </LinearLayout>
             </LinearLayout>-->
            <LinearLayout
                android:layout_marginTop="2dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:fontFamily="@font/opensans_semibold"
                    android:text="Description : "
                    />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:id="@+id/remark_desc"
                    android:visibility="gone"
                    app:fontFamily="@font/spensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>



            <!--<Button-->
            <!--android:background="@drawable/ic_delete_24dp"-->
            <!--android:id="@+id/delete_remark"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:backgroundTint="#ea0d0d"-->
            <!--android:gravity="right"/>-->

        </LinearLayout>

    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>



</RelativeLayout>

