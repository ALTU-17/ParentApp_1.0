<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id = "@+id/shimmer_layout4"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">

        <androidx.cardview.widget.CardView
            android:id = "@+id/card"
            android:layout_width = "match_parent"
            android:layout_height = "70dp"
            android:layout_margin = "3dp"
            android:layout_marginTop = "5dp"
            app:cardCornerRadius = "8dp"
            app:cardElevation = "10dp">

            <RelativeLayout
                android:id = "@+id/stud_name"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_gravity = "center"
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp">

                <ImageView
                    android:id = "@+id/tlogo"
                    android:layout_width = "50dp"
                    android:layout_height = "50dp"
                    android:layout_centerVertical = "true"
                    android:background = "@color/shimmer"
                    android:padding = "3dp" />

                <RelativeLayout
                    android:id = "@+id/Relative1"
                    android:layout_width = "wrap_content"
                    android:layout_height = "match_parent"
                    android:layout_alignTop = "@+id/tlogo"
                    android:layout_toEndOf = "@+id/tlogo"
                    android:layout_toRightOf = "@+id/tlogo">

                    <LinearLayout
                        android:id = "@+id/one"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content">

                        <TextView
                            android:id = "@+id/student_Name"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_alignTop = "@+id/tlogo"
                            android:layout_centerVertical = "true"
                            android:layout_marginEnd = "2dp"
                            android:layout_marginRight = "2dp"
                            android:layout_toEndOf = "@+id/tlogo"
                            android:layout_toRightOf = "@+id/tlogo"
                            android:text = "Student"
                            android:textColor = "@color/secondary_text"
                            android:textSize = "15sp"
                            app:fontFamily = "@font/opensans_semibold" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_below = "@+id/one"
                        android:orientation = "horizontal">

                        <TextView
                            android:id = "@+id/tvRoll"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "Roll No : "
                            android:textColor = "@color/accent"
                            android:textSize = "13sp"
                            app:fontFamily = "@font/opensans_semibold" />

                        <TextView
                            android:id = "@+id/tv_roll"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_marginEnd = "2dp"
                            android:layout_marginRight = "2dp"
                            android:background = "@color/shimmer"
                            android:gravity = "start |center"
                            android:text = "00"
                            android:textColor = "@color/accent"
                            android:textSize = "13sp"
                            app:fontFamily = "@font/opensans_semibold" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id = "@+id/verticalline"
                    android:layout_width = "1dp"
                    android:layout_height = "30dp"
                    android:layout_alignTop = "@+id/tlogo"
                    android:layout_alignBottom = "@id/tlogo"
                    android:layout_marginStart = "5dp"
                    android:layout_marginLeft = "5dp"
                    android:layout_marginEnd = "2dp"
                    android:layout_marginRight = "2dp"
                    android:layout_toEndOf = "@+id/Relative1"
                    android:layout_toRightOf = "@+id/Relative1"
                    android:background = "@drawable/line" />

                <TextView
                    android:id = "@+id/tv_cs"
                    android:layout_width = "60dp"
                    android:layout_height = "wrap_content"
                    android:layout_alignTop = "@+id/tlogo"
                    android:layout_centerVertical = "true"
                    android:layout_marginTop = "0dp"
                    android:layout_toEndOf = "@+id/verticalline"
                    android:layout_toRightOf = "@+id/verticalline"
                    android:gravity = "center"
                    android:text = "Class"
                    android:textColor = "@color/secondary_text"
                    android:textSize = "15sp"
                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:id = "@+id/tv_cs1"
                    android:layout_width = "60dp"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@+id/tv_cs"
                    android:layout_centerVertical = "true"
                    android:layout_toEndOf = "@+id/verticalline"
                    android:layout_toRightOf = "@+id/verticalline"
                    android:background = "@color/shimmer"
                    android:gravity = "center"
                    android:text = "Class"
                    android:textColor = "@color/accent"
                    android:textSize = "13sp"
                    app:fontFamily = "@font/opensans_semibold" />

                <View
                    android:id = "@+id/verticalline2"
                    android:layout_width = "1dp"
                    android:layout_height = "30dp"
                    android:layout_alignTop = "@+id/tlogo"
                    android:layout_alignBottom = "@id/tlogo"
                    android:layout_marginStart = "2dp"
                    android:layout_marginLeft = "2dp"
                    android:layout_marginEnd = "2dp"
                    android:layout_marginRight = "2dp"
                    android:layout_toEndOf = "@+id/tv_cs"
                    android:layout_toRightOf = "@+id/tv_cs"
                    android:background = "@drawable/line" />

                <TextView
                    android:id = "@+id/tv_ct"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_alignTop = "@+id/tlogo"
                    android:layout_centerVertical = "true"
                    android:layout_toEndOf = "@+id/verticalline2"
                    android:layout_toRightOf = "@+id/verticalline2"
                    android:gravity = "center"
                    android:text = "Teacher"
                    android:textColor = "@color/secondary_text"
                    android:textSize = "15sp"
                    app:fontFamily = "@font/opensans_semibold" />

                <TextView
                    android:id = "@+id/tv_ct1"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@+id/tv_cs"
                    android:layout_centerVertical = "true"
                    android:layout_marginEnd = "5dp"
                    android:layout_marginRight = "5dp"
                    android:layout_marginBottom = "4dp"
                    android:layout_toEndOf = "@+id/verticalline2"
                    android:layout_toRightOf = "@+id/verticalline2"
                    android:background = "@color/shimmer"
                    android:gravity = "center"
                    android:text = "Teacher Name"
                    android:textColor = "@color/accent"
                    android:textSize = "13sp"
                    app:fontFamily = "@font/opensans_semibold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </com.facebook.shimmer.ShimmerFrameLayout>


</LinearLayout>
